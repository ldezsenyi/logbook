<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<android.support.v7.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			android:id="@+id/flight_card"
			android:layout_gravity="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			card_view:cardPreventCornerOverlap="false">

		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<com.flightcompanion.flightlogbook.view.CornerMarkerView
					xmlns:corner_marker="http://schemas.android.com/apk/res-auto"
					android:id="@+id/marker"
					android:layout_width="10dp"
					android:layout_height="10dp"
					android:layout_alignParentStart="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentTop="true"
					corner_marker:markerColor="@color/red"/>

			<TextView
					android:id="@+id/date_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentLeft="true"
					android:layout_below="@+id/marker"/>

			<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@id/date_field"
					android:layout_toLeftOf="@+id/performance_field"
					android:orientation="vertical">

				<TextView
						android:id="@+id/plane_info"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
			</LinearLayout>

			<TextView
					android:id="@+id/performance_field"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true"/>
		</RelativeLayout>
	</android.support.v7.widget.CardView>

</LinearLayout>
